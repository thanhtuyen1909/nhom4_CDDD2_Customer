<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".activites.User.InformationUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">
        <LinearLayout
            style="@style/ve_2_total_free"
            android:layout_weight="4">

            <LinearLayout style="@style/ve_5">

            </LinearLayout>


            <ImageView
                android:id="@+id/imgInformation"
                android:background="@color/colorBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/user"
                android:scaleType="fitCenter"
                 />

            <LinearLayout style="@style/ve_5"></LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ve_2_total_free"
            android:layout_weight="4">

            <LinearLayout style="@style/ve_5"></LinearLayout>

            <TextView
                android:id="@+id/tvInformationPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:text="056 8442 815"
                android:textColor="#252222"
                android:textSize="18sp" />

            <LinearLayout style="@style/ve_5"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/ve_2_total_free"
            android:layout_weight="4">

            <LinearLayout style="@style/ve_5"></LinearLayout>

            <EditText
                android:id="@+id/edtInformationUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:hint="Username"
                android:inputType="text"
                android:textColor="#252222" />

            <LinearLayout style="@style/ve_5">

                <ImageView
                    android:id="@+id/imgInformationEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_edit"
                    app:tint="@color/colorTintIcon" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/ve_2_total_free"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <LinearLayout style="@style/ve_5"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:text="Ngày sinh"
                    android:textColor="#252222"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edtDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberSigned"
                        android:maxLength="2"
                        android:text="0"
                        android:textColor="#252222" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:text="/"
                        android:textColor="#252222" />

                    <EditText
                        android:id="@+id/edtMonth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberSigned"
                        android:maxLength="2"
                        android:text="0"
                        android:textColor="#252222" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:text="/"
                        android:textColor="#252222" />

                    <EditText
                        android:id="@+id/edtYear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="numberSigned"
                        android:maxLength="4"
                        android:text="0"
                        android:textColor="#252222" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout style="@style/ve_5"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/ve_2_total_free"
            android:layout_weight="5" />
        <LinearLayout
            style="@style/ve_2_total_free"
            android:layout_weight="4">

            <LinearLayout
                style="@style/ve_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                style="@style/ve_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></LinearLayout>

            <Button
                android:id="@+id/btnInformationChangePassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_marginRight="30dp"
                android:layout_weight="3"
                android:ems="10"
                android:inputType="phone"
                android:text="Đổi mật khẩu" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/ve_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                </LinearLayout>

                <Button
                    android:id="@+id/btnInformationSave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Lưu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/ve_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"></LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>